<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">
    Edit Blog
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=put" method="post">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%=blog.title%>" placeholder="Title">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" value="<%=blog.image%>" placeholder="Image">
      </div>
      <div class="field">
        <label>Blog Post Goes Here</label>
        <textarea name="blog[body]" rows="8" cols="80">
          <%-blog.body%>
        </textarea>
      </div>
        <input class="ui inverted big red button" type="submit">
    </form>
  </div>
</div>
<% include ./partials/footer %>
