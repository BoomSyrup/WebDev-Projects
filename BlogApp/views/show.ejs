<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header">
    <%=blog.title%>
  </div>
  <div class="ui top attatched">
    <div class="item">
      <img class="ui centered rounded image" src="<%=blog.image%>" alt="">
      <div class="content">
        <p><%=blog.created.toDateString()%></p>
      </div>
    </div>
    <div class="description">
      <p><%-blog.body%></p>
    </div>
    <form class="ui form inline" action="/blogs/<%=blog._id%>?_method=delete" method="post">
      <div class="field inline">
        <button class="ui negative basic button">Delete</button>
      </div>
    </form>
    <a href="/blogs/<%=blog._id%>/edit" class="ui yellow basic button">Edit</a>
  </div>
</div>
<% include ./partials/footer %>
